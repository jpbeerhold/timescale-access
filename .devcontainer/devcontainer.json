{
  "name": "timescale-access dev + TimescaleDB",
  "dockerComposeFile": [
    "../docker-compose.yaml"
  ],
  "service": "app",
  "workspaceFolder": "/app",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/venv/bin/python",
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": ["tests"]
      },
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy"
      ]
    }
  },
  "postCreateCommand": "pip install -e .[dev,docs]"
}
